<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent" android:layout_height="wrap_content"
              android:padding="16dp"
>

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

    >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="#b3b3ff">

            <TextView
                android:id="@+id/contact_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_alignParentTop="true"
                android:textSize="15sp"
                android:text="NAME"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADDRESS"
                android:id="@+id/addressTV" android:layout_below="@+id/contact_name"
                android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
                android:textSize="10sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DISTANCE"
                android:id="@+id/distanceTV"
                android:layout_alignBottom="@+id/contact_name"
                android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CUISINE"
                android:id="@+id/cuisineTV" android:layout_alignBottom="@+id/contact_name"
                android:layout_toRightOf="@+id/contact_name"
                android:layout_toEndOf="@+id/contact_name" android:paddingLeft="10dp"
                android:textSize="15sp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"/>
</LinearLayout>